@model Store.Domain.Entities.Category
@using Store.Resourses.Views.Admin

@{
    if (Model.CategoryID == 0){
        <h2 class="title half_title">@AdminStrings.add_category</h2>
        ViewBag.Title = @AdminStrings.add_category;  
    }
    else {
         <h2 class="title half_title">@AdminStrings.edit_category</h2> 
            ViewBag.Title = @AdminStrings.edit_category;
    }                                                                  
}

@Html.ValidationSummary()

@using (Html.BeginForm("EditCategory", "Admin", new { app_culture = ViewContext.RouteData.Values["app_culture"] }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
   <div class="editor-field"> @Html.HiddenFor(model => model.CategoryID)</div>    
   
    <div class="editor-label"> @Html.LabelFor(model => model.CategoryName)</div>
    <div class="editor-field"> @Html.TextBoxFor(model => model.CategoryName)
    @Html.ValidationMessageFor(m => m.CategoryName)</div>
   
    <div class="editor-label"> @Html.LabelFor(model => model.Description)</div>   
    <div class="editor-label"> @Html.TextAreaFor(model => model.Description)
    @Html.ValidationMessageFor(m => m.Description)</div>
    
    <input type="file" name="VideoImage" id="VideoImage" class="post_form_button"/> 
    
    <div><input type="submit" value="@AdminStrings.Save" class = "post_form_button"/>
    @Html.ActionLink(@AdminStrings.Cancel, "Home", "Admin", new { app_culture = ViewContext.RouteData.Values["app_culture"] }, new { @class = "post_form_button" })</div>

}
